<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wanandroid.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/log_tool"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/back" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="登陆"
            android:textSize="30dp"
            android:layout_gravity="center"
            />

        <EditText
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            android:id="@+id/log_name"
            android:layout_marginTop="70dp"
            android:drawableLeft="@drawable/loginname"
            android:layout_gravity="center"
            />
        <EditText
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:id="@+id/log_pwd"
            android:drawableLeft="@drawable/loginpwd"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:textColor="#ffffff"
        android:id="@+id/log_deng"
        android:background="@drawable/cicrcle_draw"
        android:text="登陆"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="或"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:id="@+id/log_zhu"
        android:background="@drawable/cicrcle_draw2"
        android:text="注册"
        />
</LinearLayout>
