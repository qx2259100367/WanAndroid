<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/pro_iv1"
                    android:layout_width="120dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/ic_launcher" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_launcher_blue"
                    android:id="@+id/pro_iv2"
                    android:layout_toRightOf="@id/pro_iv1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_toRightOf="@id/pro_iv2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/pro_name"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@id/pro_iv2"
                    android:text="@string/app_name"
                    android:layout_toRightOf="@id/pro_iv1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:id="@+id/pro_title"
                    />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/app_name"
                       android:layout_below="@id/pro_title"
                       android:layout_toRightOf="@id/pro_iv1"
                       android:layout_marginLeft="20dp"
                       android:layout_marginTop="20dp"
                       android:id="@+id/pro_time"
                       />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pro_author"
                    android:text="@string/app_name"
                    android:layout_below="@id/pro_title"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/pro_time"
                    android:layout_marginLeft="10dp"
                    />
        </RelativeLayout>
</android.support.v7.widget.CardView>